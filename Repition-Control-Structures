import java.util.Scanner;
public class LabTask1 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("Part (a): Print all numbers from A to B inclusively");
        System.out.print("Enter A: ");
        int A = input.nextInt();
        System.out.print("Enter B: ");
        int B = input.nextInt();
        int i = A;
        while (i <= B) {
            System.out.print(i + " ");
            i++; }
        System.out.println("\n");
        System.out.println("Part (b): Print numbers from A to B (ascending or descending)");
        System.out.print("Enter A: ");
        A = input.nextInt();
        System.out.print("Enter B: ");
        B = input.nextInt();
        if (A < B) {
            while (A <= B) {
                System.out.print(A + " ");
                A++; } 
        } 
	else {
            while (A >= B) {
                System.out.print(A + " ");
                A--; }       
        }
        System.out.println("\n");
        System.out.println("Part (c): Sum of N numbers");
        System.out.print("Enter how many numbers (N): ");
        int N = input.nextInt();
        int sum = 0;
        int count = 1;
        while (count <= N) {
            System.out.print("Enter number " + count + ": ");
            int num = input.nextInt();
            sum += num;
            count++; }
        System.out.println("Sum = " + sum);
        System.out.println();
        System.out.println("Part (d): Sum of cubes (1^3 + 2^3 + ... + N^3)");
        System.out.print("Enter N: ");
        N = input.nextInt();
        int cubeSum = 0;
        int j = 1;
        while (j <= N) {
            cubeSum += (j * j * j);
            j++; }
        System.out.println("Sum of cubes = " + cubeSum);
    }
}
import java.util.Scanner;
public class LabTask2 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter a positive integer n: ");
        int n = input.nextInt();
        long factorial = 1;
        int i = 1;
        while (i <= n) {
            factorial = factorial * i;
            i++; }
        System.out.println("Factorial of " + n + " is " + factorial);
    }
}
import java.util.Scanner;
public class LabTask3 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter how many numbers (N): ");
        int N = input.nextInt();
        int countZero = 0; 
        int i = 1;
        while (i <= N) {
            System.out.print("Enter number " + i + ": ");
            int num = input.nextInt();
            if (num == 0)
                countZero++;
            i++; }
        System.out.println("Number of zeros = " + countZero);
    }
}
import java.util.Scanner;
public class LabTask4 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int number;
        int count = 0; 
        System.out.println("Enter non-negative integers (enter 0 to stop):");
        number = input.nextInt();
        while (number != 0) {
            count++; 
            number = input.nextInt(); }  
        System.out.println("Length of the sequence = " + count);
    }
}
import java.util.Scanner;
public class LabTask5 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int number;
        int max;
        System.out.println("Enter integers (end with 0):");
        number = input.nextInt(); 
        max = number;            
        while (number != 0) {
            if (number > max) {
                max = number; }
            number = input.nextInt(); }
        System.out.println("The maximum number in the sequence = " + max);
    }
}
import java.util.Scanner;
public class LabTask1 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.println("Enter a sequence of integers (end with 0):");
        int number = input.nextInt();  
        int max = number;              
        int index = 1;                
        int maxIndex = 1;              
        while (number != 0) {
            number = input.nextInt();
            index++; 
            if (number != 0 && number > max) {
                max = number;
                maxIndex = index; }          
        }
        System.out.println("The index of the maximum number = " + maxIndex);
    }
}
import java.util.Scanner;
public class LabTask2 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int number;
        int evenCount = 0;
        System.out.println("Enter integers (end with 0):");
        number = input.nextInt();
        while (number != 0) {
            if (number % 2 == 0) {
                evenCount++; }            
            number = input.nextInt(); }        
        System.out.println("Number of even elements in the sequence = " + evenCount);
    }
}
import java.util.Scanner;
public class LabTask3 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        int pre, current;
        int count = 0;
        System.out.println("Enter a sequence of integers (end with 0):");
        pre = input.nextInt(); 
        while (true) {
            current = input.nextInt();
            if (current == 0) {
                break; }            
            if (current > pre) {
                count++; }
            pre = current; }        
        System.out.println("Number of elements greater than the previous one = " + count);
    }
}
import java.util.Scanner;
public class LabTask4 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        char choice;
        do {
            System.out.println("Choose a pattern to print:");
            System.out.println("1) Pattern i");
            System.out.println("2) Pattern ii");
            System.out.println("3) Pattern iii");
            System.out.println("4) Pattern iv");
            System.out.println("5) Pattern v");
            System.out.print("Enter your choice (1-5): ");
            int pattern = input.nextInt();
            switch (pattern) {
                case 1:
                    for (int i = 1; i <= 4; i++) {
                        for (int j = 1; j <= 10; j++) {
                            System.out.print("*"); }     
                        System.out.println(); }
                    break;
                case 2:    
                    for (int i = 1; i <= 5; i++) {
                        for (int j = 1; j <= i; j++) {
                            System.out.print("*"); }   
                        System.out.println();
                    }
                    break;
                case 3:
                    for (int i = 5; i >= 1; i--) {
                        for (int j = 1; j <= i; j++) {
                            System.out.print("*"); }     
                        System.out.println(); } 
                    break;
                case 4:
                    for (int i = 1; i <= 5; i++) {
                        for (int s = 1; s <= 5 - i; s++) {
                            System.out.print(" "); }  
                        for (int j = 1; j <= (2 * i - 1); j++) {
                            System.out.print("*"); }    
                        System.out.println(); }              
                    break;
                case 5:
                    for (int i = 1; i <= 5; i++) {
                    for (int s = 1; s <= 5 - i; s++) {
                            System.out.print(" "); }     
		    for (int j = 1; j <= (2 * i - 1); j++) {
                            System.out.print(i); }    
                        System.out.println(); }       
                    break;
                default:
                    System.out.println("Invalid choice! Please choose between 1â€“5."); }            
            System.out.print("Do you want to print another pattern? (Y/N): ");
            choice = input.next().charAt(0); }
         while (choice == 'Y' || choice == 'y');
        System.out.println("Program terminated.");
    }
}
import java.util.Scanner;
public class LabTask5 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter the year: ");
        int year = input.nextInt();
        System.out.print("Enter the first day of the year (0-Sunday, 1-Monday, ..., 6-Saturday): ");
        int startDay = input.nextInt();
        for (int month = 1; month <= 12; month++) {
            displayMonth(year, month, startDay);
            startDay = (startDay + getDaysInMonth(month, year)) % 7;
            System.out.println(); }
    }  
    public static void displayMonth(int year, int month, int startDay) {
        String[] monthNames = {"", "January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"};
        System.out.println("          " + monthNames[month] + " " + year);
        System.out.println("-------------------------------------"); 
        System.out.println(" Sun Mon Tue Wed Thu Fri Sat");
        int daysInMonth = getDaysInMonth(month, year);
        for (int i = 0; i < startDay; i++) {
            System.out.print("    "); }   
        for (int day = 1; day <= daysInMonth; day++) {
            System.out.printf("%4d", day);
            if ((day + startDay) % 7 == 0) {
                System.out.println(); }
        }
        if ((daysInMonth + startDay) % 7 != 0) {
            System.out.println(); }
        System.out.println(); 
	}   
        public static int getDaysInMonth(int month, int year) {
        switch (month) {
            case 1: case 3: case 5: case 7: case 8: case 10: case 12:
                return 31;
            case 4: case 6: case 9: case 11:
                return 30;
            case 2: if (isLeapYear(year)) {
                return 29; }
             else {
                return 28; } 
            default:
                return 0; }      
    }
    public static boolean isLeapYear(int year) {
        return (year % 4 == 0 && year % 100 != 0) || (year % 400 == 0); }
}
