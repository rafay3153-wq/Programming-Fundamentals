import java.util.*;
import java.io.*;
public class LabTask1 {
    public static void main(String[] args) {
        Scanner input=new Scanner(System.in);
        ArrayList<Integer> numbers=new ArrayList<>();
        System.out.println("Enter 10 integer values:");
        for(int i=0;i<10;i++){
            System.out.print("Enter number "+(i+1)+": ");
            numbers.add(input.nextInt());
    }
    try {
        FileWriter writer = new FileWriter("numbers.txt");
        for (int num:numbers) {
            writer.write(num + "\n");
        }        
        writer.close();
        System.out.println("\nData successfully saved in numbers.txt.");
    } catch (IOException e) {
        System.out.println("An error occured while saving the file.");
        }        
    }
}
import java.io.*;
import java.util.*;
public class LabTask2 {
    public static void main(String[] args) {
        ArrayList<Integer> numbers=new ArrayList<>();
        try {
            File file=new File("numbers.txt");
            Scanner reader=new Scanner(file);
            while(reader.hasNextInt()){
                numbers.add(reader.nextInt());
            }
            reader.close();
            Collections.sort(numbers);
            System.out.println("Sorted Numbers (Ascending Order):");
            for(int num:numbers){
                System.out.println(num);
            }
        } catch (FileNotFoundException e) {
            System.out.println("File not found! Make sure numbers.txt exists.");
        }
    }
}
import java.io.*;
import java.util.*;
public class LabTask3 {
    public static boolean isPrime(int n) {
        if (n <= 1) return false;
        for (int i = 2; i <= Math.sqrt(n); i++) {
            if (n % i == 0)
                 return false;
        }
        return true;
    }
    public static void main(String[] args) {
        ArrayList<Integer> numbers=new ArrayList<>();
        try {
            File file=new File("numbers.txt");
            Scanner reader=new Scanner(file);
            while(reader.hasNextInt()){
                numbers.add(reader.nextInt());
            }
        reader.close();
        numbers.removeIf(num -> isPrime(num));
        FileWriter writer = new FileWriter("numbers.txt");
        for (int num : numbers) {
            writer.write(num + "\n");
        }
        writer.close();
        System.out.println("Prime numbers removed and file updated successfully.");
    } catch (IOException e) {
        System.out.println("Error accessing numbers.txt file.");
        }
    }
}
